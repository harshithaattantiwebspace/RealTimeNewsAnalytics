# Performance optimization settings
REACT_APP_API_URL=http://localhost:8000
GENERATE_SOURCEMAP=false

# Development settings
BROWSER=none  # Prevents auto-opening of browser
TSC_COMPILE_ON_ERROR=true  # Continue build despite TypeScript errors
ESLINT_NO_DEV_ERRORS=true  # Show ESLint errors as warnings

# Enable compression in CRA for production build
COMPRESS_STATIC_ASSETS=true
INLINE_RUNTIME_CHUNK=false 